<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="772.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.moviedatabase.TitleInputController">
    <children>
        <Label fx:id="headerLabel" alignment="CENTER" layoutX="188.0" layoutY="96.0" prefHeight="35.0" prefWidth="397.0" text="Enter title of the movie :">
            <font>
                <Font name="Palatino Linotype" size="27.0" />
            </font>
        </Label>
        <Button fx:id="buttonGoBack" layoutX="221.0" layoutY="250.0" mnemonicParsing="false" onAction="#onGoBackClick" text="Go Back">
            <font>
                <Font name="Palatino Linotype" size="24.0" />
            </font>
        </Button>
        <TextField fx:id="inputTextField" layoutX="211.0" layoutY="162.0" prefHeight="47.0" prefWidth="352.0" promptText="Please enter the title">
            <font>
                <Font name="Palatino Linotype" size="24.0" />
            </font>
        </TextField>
        <Button fx:id="buttonConfirm" alignment="CENTER" layoutX="427.0" layoutY="250.0" mnemonicParsing="false" onAction="#onConfirmClick" text="Confirm">
            <font>
                <Font name="Palatino Linotype" size="24.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
